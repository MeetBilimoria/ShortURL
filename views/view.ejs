<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
</head>
<body>
    URL Shortner
    <div>
        <form method="POST" action="/url">
            <label>Enter your original Link:</label>
            <input type="text" name="redirect" id="" placeholder="https://example.com">
            <button type="submit">Generate</button>
        </form>
    </div>
    
    <div>
    <% if (locals.id) { %>
     <p> URL Generated: https://localhost:8000/url/<%= id %></p>
    <% } %>
</div>
    <div>
        <% if (locals.urlfront) { %>
         <table>
            <thead>
                <th>Sr.NO</th>
                <th>ShorId</th>
                <th>Redirect</th>
                <th>click</th>
            </thead>
                <tbody>
                    <% urlfront.forEach((redirect,index) => { %>
                        <tr>
                        <td><%= index + 1 %></td>
                        <td><%= redirect.shortId %></td>
                        <td><%= redirect.redirect %></td>
                        <td><%= redirect.visitHistory.length %></td>
                       <% }) %>
                    </tr>
                </tbody>
         </table>
        <% } %>
    </div>
</body>
</html>